{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-beads"],
  "models": [
    {
      "id": "anthropic/claude-opus-4-20250514",
      "default": true
    }
  ],
  "agent": {
    "general": {
      "description": "General-purpose agent for researching complex questions and executing multi-step tasks with Sonnet 4.5",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4.5-20250514"
    },
    "explore": {
      "description": "Fast agent specialized for exploring codebases with Haiku 4",
      "mode": "subagent",
      "model": "anthropic/claude-haiku-4-20250514"
    },
    "diagnose": {
      "description": "Senior diagnostic expert using Opus 4.6 for hard problems",
      "mode": "subagent",
      "model": "anthropic/claude-opus-4-20250514"
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "togather": {
      "type": "remote",
      "enabled": true,
      "url": "https://staging.toronto.togather.foundation/mcp",
      "headers": {
        "Authorization": "Bearer {env:TOGATHER_MCP_API_KEY}"
      },
      "oauth": false
    }
  }
}