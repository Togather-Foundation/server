{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-beads"],
  "mcp": {
    "context7": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "togather": {
      "type": "remote",
      "enabled": true,
      "url": "https://staging.toronto.togather.foundation/mcp",
      "headers": {
        "Authorization": "Bearer {env:TOGATHER_MCP_API_KEY}"
      },
      "oauth": false
    }
  }
}